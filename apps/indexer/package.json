{
  "name": "indexer",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "drizzle-kit": "drizzle-kit",
    "docker": "docker compose up -d"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/indexer/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/indexer/src/main.ts",
          "tsConfig": "apps/indexer/tsconfig.app.json",
          "assets": [
            "apps/indexer/assets",
            {
              "input": "apps/indexer/drizzle",
              "glob": "**/*",
              "output": "./apps/indexer/drizzle"
            }
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/indexer/dist/package.json",
          "{workspaceRoot}/apps/indexer/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/indexer/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "indexer:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "indexer:build:development"
          },
          "production": {
            "buildTarget": "indexer:build:production"
          }
        }
      },
      "test": {
        "executor": "@nx/vite:test"
      }
    }
  },
  "dependencies": {
    "@bull-board/api": "6.13.0",
    "@bull-board/fastify": "6.13.0",
    "@fastify/autoload": "6.0.3",
    "@fastify/cors": "11.1.0",
    "@fastify/sensible": "6.0.3",
    "@sovryn/slayer-sdk": "workspace:*",
    "@sovryn/slayer-shared": "workspace:*",
    "bullmq": "5.58.7",
    "cron": "4.3.3",
    "dotenv": "17.2.2",
    "drizzle-orm": "0.44.5",
    "envalid": "8.1.0",
    "fastify": "5.6.1",
    "fastify-plugin": "5.0.1",
    "fastify-type-provider-zod": "6.0.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "ioredis": "5.8.0",
    "lodash": "4.17.21",
    "pg": "8.16.3",
    "pino": "9.11.0",
    "pino-pretty": "13.1.1",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@types/lodash": "4.17.20",
    "@types/pg": "8.15.5",
    "drizzle-kit": "0.31.4",
    "vitest": "3.2.4"
  }
}
